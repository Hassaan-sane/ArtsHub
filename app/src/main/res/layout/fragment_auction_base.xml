<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightPromary"
    android:orientation="vertical"
    tools:context=".Fragments.AuctionBaseFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/myBids"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:contextClickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="2dp"
            app:contentPadding="5dp"
            tools:targetApi="o"
            android:clickable="true">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@color/colorAccent"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

            <Button
                android:id="@+id/BtnMyBids"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:background="@color/colorTextIcon"
                android:textSize="20dp"
                android:text="My Bids" />



        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:contextClickable="true"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/OngoingAuctions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="2dp"
            app:contentPadding="5dp"
            tools:targetApi="o"
          >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="@color/colorAccent"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

            <Button
                android:id="@+id/BtnOnGoingAuctions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/colorTextIcon"
                android:gravity="center_horizontal"

                android:textSize="20dp"
                android:text="On Going Auctions" />



        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>