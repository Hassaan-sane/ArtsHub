<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ComplainActivity">


    <EditText
        android:id="@+id/ComplaintTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Complain Title"/>

    <EditText
        android:id="@+id/ComplaintBodyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Complain Here"/>
    <Button
        android:id="@+id/BtnSubmitComplaint"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Complain"/>

</LinearLayout>